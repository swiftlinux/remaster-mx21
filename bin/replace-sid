#!/bin/bash

# NOTE: set -o pipefail is needed to ensure that any error or failure causes the whole pipeline to fail.
# Without this specification, the CI status will provide a false sense of security by showing builds
# as succeeding in spite of errors or failures.
set -eo pipefail

STR1=$1
STR2=$2
DIRECTORY=$3

# This script replaces incidences of one string (STR1) with another (STR2)
# within all files within (DIRECTORY).

# -I flag: omits binary files from the results
# -r flag: recursive
# -e flag: the pattern used during the search

echo '---------------------------------------------------------'
echo "BEGIN: replacing '$STR1' within '$STR2' within $DIRECTORY"
echo '---------------------------------------------------------'

grep -rnw -I "$DIRECTORY" -e "$STR1" | xargs sed -i "s/$STR1/$STR2/g"

echo '------------------------------------------------------------'
echo "FINISHED: replacing '$STR1' within '$STR2' within $DIRECTORY"
echo '------------------------------------------------------------'
