#!/bin/bash

# NOTE: set -o pipefail is needed to ensure that any error or failure causes the whole pipeline to fail.
# Without this specification, the CI status will provide a false sense of security by showing builds
# as succeeding in spite of errors or failures.
set -eo pipefail

# PURPOSE:
# In this stage, selected ISO component files (in the $DIR_ISO_NEW directory) are customized.

echo '#############################################################################'
echo 'BEGIN STAGE 8: Customizing MX Linux to create the Swift Linux special edition'
echo '#############################################################################'

echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'
echo 'BEGIN STAGE 8A: customizing the Swift Linux ISO component files'
echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'

DATE1=$(date +%s)

source definitions.sh

# Updating $DIR_ISO_NEW/version and $DIR_ISO_NEW/.disk/info
echo ''
echo "Updating $DIR_ISO_NEW/version"
echo "$EDITION_LONG" > "$DIR_ISO_NEW/version"
echo "Based on MX Linux $MX_VERSION (x64) $MX_CODE_NAME $MX_DATE" >> "$DIR_ISO_NEW/version"
echo ''
echo '------------------------'
echo "cat $DIR_ISO_NEW/version"
cat $DIR_ISO_NEW/version
echo ''
echo "Updating $DIR_ISO_NEW/.disk/info"
echo "$EDITION_LONG" > "$DIR_ISO_NEW/.disk/info"
echo "Based on MX Linux $MX_VERSION (x64) $MX_CODE_NAME $MX_DATE" >> "$DIR_ISO_NEW/.disk/info"
echo ''
echo '---------------------------'
echo "cat $DIR_ISO_NEW/.disk/info"
cat $DIR_ISO_NEW/.disk/info
echo ''

if [ "$EDITION_SHORT" = 'hannahmontana' ]
then
  bin/error-if-snif 'Hannah Montana Linux' "$DIR_ISO_NEW/version"
  bin/error-if-snif 'Hannah Montana Linux' "$DIR_ISO_NEW/.disk/info"
else
  bin/error-if-snif 'Swift Linux' "$DIR_ISO_NEW/version"
  bin/error-if-snif 'Swift Linux' "$DIR_ISO_NEW/.disk/info"
fi

# Updating $DIR_ISO_NEW/boot/grub/grub.cfg
FILE_BOOT_GRUB_GRUB_CFG="$DIR_ISO_NEW/boot/grub/grub.cfg"
echo ''
echo "Updating $FILE_BOOT_GRUB_GRUB_CFG"
bin/replace_sif 'Live version of MX' "live version of $EDITION_LONG" "$FILE_BOOT_GRUB_GRUB_CFG"
bin/replace_sif "$MX_DATE" "$TIME_STAMP" "$FILE_BOOT_GRUB_GRUB_CFG"
bin/replace_sif "MX-$MX_VERSION" "$EDITION_LONG $SWIFT_VERSION" "$FILE_BOOT_GRUB_GRUB_CFG"

if [ "$EDITION_SHORT" = 'hannahmontana' ]
then
  bin/error-if-snif 'Hannah Montana Linux' "$FILE_BOOT_GRUB_GRUB_CFG"
else
  bin/error-if-snif 'Swift Linux' "$FILE_BOOT_GRUB_GRUB_CFG"
fi

bin/error-if-snif "$SWIFT_VERSION" "$FILE_BOOT_GRUB_GRUB_CFG"
bin/error-if-sif 'MX' "$FILE_BOOT_GRUB_GRUB_CFG"
bin/error-if-sif "$MX_DATE" "$FILE_BOOT_GRUB_GRUB_CFG"

DATE2=$(date +%s)

echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'
echo "FINISHED 8A: customizing the Swift Linux ISO component files ($((DATE2-DATE1)) seconds)"
echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'
